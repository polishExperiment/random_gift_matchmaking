<!DOCTYPE html>
<html lang='pl'>
<head>
  <title>RandomGiftMatchmaking</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container container-reset top-buffer">
    <% if session[:user] %>
      <div class="row no-gutter">
        <div class="col-md-9">
        </div>
        <div class="col-md-1 top-buffer">
          <%= button_to "Wyloguj",
                        {controller => :home, :action => :welcome},
                        {class: 'btn btn-success', method: :get} %>
        </div>
        <div class="col-md-2">
        </div>
      </div>
    <% end %>
    <% if !flash.empty? %>
      <% flash.each do |name, message| -%>
        <div class="row no-gutter top-buffer">
          <div class="col-md-2">
          </div>
          <div class="col-md-8">
            <p class="rails-<%= name %>"><%= message %></p>
          </div>
          <div class="col-md-2">
          </div>
        </div>
      <% end -%>
    <% end %>
    <div class="row">
      <div class="col-md-2">
      </div>
      <div class="col-md-8">
        <%= yield %>
      </div>
      <div class="col-md-2">
      </div>
    </div>
  </div>
</body>
</html>
